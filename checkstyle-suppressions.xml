<!DOCTYPE suppressions PUBLIC
  "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
  "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>

  <!-- TODO: Complete Javadocs -->
  <suppress checks="MissingJavadocMethod" />

  <!-- Will not rename -->
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]newmediaworks[/\\]taglib[/\\]payment[/\\]CreditCardTag\.java$"
    message="'(creditCardGUID|setCreditCardGUID)'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]newmediaworks[/\\]taglib[/\\]payment[/\\](legacy[/\\])?CreditCardGUIDTag\.java$"
    message="'CreditCardGUIDTag'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]newmediaworks[/\\]taglib[/\\]payment[/\\]UseProcessorTag\.java$"
    message="'getUSAePay'"
  />

  <!-- Will keep the names matching the Authorize.Net documentation for clarity -->
  <suppress
    checks="ParameterName"
    files="[/\\]com[/\\]newmediaworks[/\\]taglib[/\\]payment[/\\]UseProcessorTag\.java$"
    message="'(x_login|x_tran_key)'"
  />

</suppressions>
